# E2E Test Environment — copy this to .env.test and fill in your values
# .env.test is gitignored; never commit real credentials

# For local development: point to your dev Supabase (data will be WIPED before tests!)
# For CI: use a local PostgreSQL service container
DATABASE_URL="postgresql://postgres:[password]@aws-1-ca-central-1.pooler.supabase.com:6543/postgres"
DIRECT_URL="postgresql://postgres:[password]@aws-1-ca-central-1.pooler.supabase.com:5432/postgres"

# IMPORTANT: The E2E suite truncates ALL data before running.
# Use a DEDICATED test database or accept that dev data will be replaced.

# Auth
SESSION_SECRET="e2e-test-secret-at-least-32-characters-long"

# Supabase Storage (use fake values for E2E — photo upload is not tested end-to-end)
NEXT_PUBLIC_SUPABASE_URL="https://fake.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="fake-anon-key"
SUPABASE_SERVICE_ROLE_KEY="fake-service-key"

# Anthropic (AI OCR is not tested in E2E — use fake key)
ANTHROPIC_API_KEY="sk-ant-fake-not-used-in-e2e"

# Playwright base URL
E2E_BASE_URL="http://localhost:3000"

# SSL (required for Supabase)
NODE_TLS_REJECT_UNAUTHORIZED=0
