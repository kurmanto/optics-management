// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

// ─────────────────────────────────────────
// AUTH
// ─────────────────────────────────────────

model User {
  id                 String   @id @default(cuid())
  email              String   @unique
  name               String
  passwordHash       String
  role               UserRole @default(STAFF)
  isActive           Boolean  @default(true)
  mustChangePassword   Boolean             @default(false)
  fontSizePreference   FontSizePreference  @default(MEDIUM) @map("font_size_preference")
  failedLoginAttempts  Int                 @default(0) @map("failed_login_attempts")
  lockedUntil          DateTime?           @map("locked_until")
  lastLoginAt          DateTime?           @map("last_login_at")
  createdAt            DateTime            @default(now())
  updatedAt            DateTime            @updatedAt

  orders          Order[]
  auditLogs       AuditLog[]
  formSubmissions FormSubmission[]
  formPackages    FormPackage[]

  notificationsTriggered  Notification[]           @relation("NotificationActor")
  notificationReads       NotificationRead[]       @relation("NotificationReads")
  notificationPreferences NotificationPreference[] @relation("NotificationPreferences")
  campaignsCreated        Campaign[]               @relation("CampaignCreatedBy")

  @@map("users")
}

enum UserRole {
  ADMIN
  STAFF
  VIEWER
}

enum FontSizePreference {
  SMALL
  MEDIUM
  LARGE
}

// ─────────────────────────────────────────
// CUSTOMERS & FAMILIES
// ─────────────────────────────────────────

model Family {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customers Customer[]

  @@map("families")
}

model Customer {
  id               String    @id @default(cuid())
  legacyCustomerId String?   @unique // e.g. "6476485809-A"
  firstName        String
  lastName         String
  email            String?
  phone            String?
  dateOfBirth      DateTime?
  gender           Gender?
  address          String?
  city             String?
  province         String?
  postalCode       String?
  notes            String?
  tags             String[]  @default([]) // ["VIP", "Insurance Gaming"]
  isActive         Boolean   @default(true)
  isOnboarded      Boolean   @default(false)
  smsOptIn         Boolean   @default(true)
  emailOptIn       Boolean   @default(true)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  hearAboutUs    String? @map("hear_about_us")
  referredByName String? @map("referred_by_name")
  occupation     String?

  marketingOptOut Boolean   @default(false) @map("marketing_opt_out")
  optOutReason    String?   @map("opt_out_reason")
  optOutDate      DateTime? @map("opt_out_date")
  optOutBy        String?   @map("opt_out_by")

  familyId String?
  family   Family? @relation(fields: [familyId], references: [id])

  prescriptions       Prescription[]
  orders              Order[]
  insurancePolicies   InsurancePolicy[]
  exams               Exam[]
  walkins             Walkin[]
  campaignEnrollments CampaignRecipient[]
  messages            Message[]
  referralsGiven      Referral[]          @relation("referrer")
  referralsReceived   Referral[]          @relation("referred")
  appointments        Appointment[]
  formSubmissions     FormSubmission[]
  formPackages        FormPackage[]
  medicalHistory      MedicalHistory?
  storeCredits        StoreCredit[]
  savedFrames         SavedFrame[]

  @@index([lastName, firstName])
  @@index([phone])
  @@index([email])
  @@map("customers")
}

enum Gender {
  MALE
  FEMALE
  OTHER
  PREFER_NOT_TO_SAY
}

// ─────────────────────────────────────────
// PRESCRIPTIONS
// ─────────────────────────────────────────

model Prescription {
  id         String              @id @default(cuid())
  customerId String
  examId     String?
  type       PrescriptionType    @default(GLASSES)
  source     PrescriptionSource  @default(INTERNAL) @map("source")
  date       DateTime

  // External prescription fields
  externalDoctor   String?   @map("external_doctor")
  externalLicense  String?   @map("external_license")
  externalRxDate   DateTime? @map("external_rx_date")
  externalImageUrl String?   @map("external_image_url")
  externalNotes    String?   @map("external_notes")

  // OD (Right Eye)
  odSphere   Float?
  odCylinder Float?
  odAxis     Int?
  odAdd      Float?
  odPd       Float?
  odBc       Float? // base curve (contacts)
  odDia      Float? // diameter (contacts)

  // OS (Left Eye)
  osSphere   Float?
  osCylinder Float?
  osAxis     Int?
  osAdd      Float?
  osPd       Float?
  osBc       Float?
  osDia      Float?

  // Combined PD
  pdBinocular Float?

  // Segment heights
  odSegmentHeight Float? @map("od_segment_height")
  osSegmentHeight Float? @map("os_segment_height")

  doctorName String?
  notes      String?
  isActive   Boolean   @default(true)
  expiryDate DateTime? @map("expiry_date")
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  exam     Exam?    @relation(fields: [examId], references: [id])
  orders   Order[]

  @@index([customerId])
  @@map("prescriptions")
}

enum PrescriptionType {
  GLASSES
  CONTACTS
}

enum PrescriptionSource {
  INTERNAL
  EXTERNAL
}

// ─────────────────────────────────────────
// INVENTORY
// ─────────────────────────────────────────

model Vendor {
  id             String   @id @default(cuid())
  name           String
  contactName    String?  @map("contact_name")
  email          String?
  phone          String?
  website        String?
  address        String?
  paymentTerms   String?  @map("payment_terms")
  minOrderQty    Int?     @map("min_order_qty")
  leadTimeDays   Int?     @map("lead_time_days")
  paymentMethods String[] @default([]) @map("payment_methods")
  returnPolicy   String?  @map("return_policy")
  repName        String?  @map("rep_name")
  repEmail       String?  @map("rep_email")
  repPhone       String?  @map("rep_phone")
  notes          String?
  isActive       Boolean  @default(true) @map("is_active")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  inventoryItems InventoryItem[]
  purchaseOrders PurchaseOrder[]

  @@map("vendors")
}

model InventoryItem {
  id            String        @id @default(cuid())
  legacyItemId  String?       @unique
  brand         String
  model         String
  sku           String?       @unique
  upc           String?       @unique
  category      FrameCategory
  gender        FrameGender
  color         String?
  colorCode     String?       @map("color_code")
  material      String?
  size          String?
  eyeSize       Int?
  bridgeSize    Int?
  templeLength  Int?
  rimType       RimType?
  styleTags     String[]      @default([]) @map("style_tags")
  countryOfOrigin String?     @map("country_of_origin")
  wholesaleCost Float?
  retailPrice   Float?
  landedCost    Float?        @map("landed_cost")
  markdownPct   Int           @default(0) @map("markdown_pct")
  stockQuantity Int           @default(0)
  committedQty  Int           @default(0) @map("committed_qty")
  onOrderQty    Int           @default(0) @map("on_order_qty")
  reorderPoint  Int           @default(2)
  abcCategory   AbcCategory?  @map("abc_category")
  firstReceivedAt DateTime?   @map("first_received_at")
  lastSoldAt    DateTime?     @map("last_sold_at")
  totalUnitsSold Int          @default(0) @map("total_units_sold")
  isActive      Boolean       @default(true)
  notes         String?
  imageUrl      String?
  additionalImageUrls String[] @default([]) @map("additional_image_urls")
  vendorId      String?       @map("vendor_id")
  // Display tracking
  isDisplayed    Boolean       @default(false) @map("is_displayed")
  displayedAt    DateTime?     @map("displayed_at")
  displayLocation String?      @map("display_location")
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  vendor                 Vendor?                @relation(fields: [vendorId], references: [id])
  orderLineItems         OrderLineItem[]
  purchaseOrderLineItems PurchaseOrderLineItem[]
  ledgerEntries          InventoryLedger[]
  savedFrames            SavedFrame[]

  @@index([brand])
  @@index([category, gender])
  @@index([vendorId])
  @@map("inventory_items")
}

enum AbcCategory {
  A
  B
  C
}

enum FrameCategory {
  OPTICAL
  SUN
  READING
  SAFETY
  SPORT
}

enum FrameGender {
  MENS
  WOMENS
  UNISEX
  KIDS
}

enum RimType {
  FULL_RIM
  HALF_RIM
  RIMLESS
}

enum PurchaseOrderStatus {
  DRAFT
  SENT
  CONFIRMED
  PARTIAL
  RECEIVED
  CANCELLED
}

model PurchaseOrder {
  id         String              @id @default(cuid())
  poNumber   String              @unique @map("po_number")
  vendorId   String              @map("vendor_id")
  status     PurchaseOrderStatus @default(DRAFT)
  expectedAt DateTime?           @map("expected_at")
  receivedAt DateTime?           @map("received_at")
  subtotal   Float               @default(0)
  shipping   Float               @default(0)
  duties     Float               @default(0)
  total      Float               @default(0)
  notes      String?
  createdBy  String              @map("created_by")
  createdAt  DateTime            @default(now()) @map("created_at")
  updatedAt  DateTime            @updatedAt @map("updated_at")

  vendor    Vendor                 @relation(fields: [vendorId], references: [id])
  lineItems PurchaseOrderLineItem[]

  @@index([vendorId])
  @@index([status])
  @@map("purchase_orders")
}

model PurchaseOrderLineItem {
  id               String    @id @default(cuid())
  poId             String    @map("po_id")
  inventoryItemId  String?   @map("inventory_item_id")
  quantityOrdered  Int       @map("quantity_ordered")
  quantityReceived Int       @default(0) @map("quantity_received")
  unitCost         Float     @map("unit_cost")
  receivedAt       DateTime? @map("received_at")
  conditionNotes   String?   @map("condition_notes")

  // Expanded frame fields for new POs
  brand       String?
  model       String?
  gender      String?
  eyeSize     String?   @map("eye_size")
  bridge      String?
  temple      String?
  color       String?
  colorCode   String?   @map("color_code")
  retailPrice Float?    @map("retail_price")
  grossProfit Float?    @map("gross_profit")
  frameType   String?   @map("frame_type")
  material    String?
  notes       String?

  po            PurchaseOrder  @relation(fields: [poId], references: [id], onDelete: Cascade)
  inventoryItem InventoryItem? @relation(fields: [inventoryItemId], references: [id])

  @@index([poId])
  @@map("purchase_order_line_items")
}

enum LedgerReason {
  PURCHASE_ORDER_RECEIVED
  MANUAL_ADJUSTMENT
  ORDER_COMMITTED
  ORDER_FULFILLED
  ORDER_CANCELLED
  PHYSICAL_COUNT
  DAMAGED
  LOST
  RETURN_FROM_CUSTOMER
}

model InventoryLedger {
  id              String       @id @default(cuid())
  inventoryItemId String       @map("inventory_item_id")
  reason          LedgerReason
  quantityChange  Int          @map("quantity_change")
  quantityAfter   Int          @map("quantity_after")
  unitCost        Float?       @map("unit_cost")
  referenceId     String?      @map("reference_id")
  referenceType   String?      @map("reference_type")
  notes           String?
  createdBy       String?      @map("created_by")
  createdAt       DateTime     @default(now()) @map("created_at")

  inventoryItem InventoryItem @relation(fields: [inventoryItemId], references: [id])

  @@index([inventoryItemId])
  @@map("inventory_ledger")
}

// ─────────────────────────────────────────
// ORDERS
// ─────────────────────────────────────────

model Order {
  id             String      @id @default(cuid())
  orderNumber    String      @unique // e.g. "ORD-2025-001"
  customerId     String
  userId         String // staff who created it
  prescriptionId String?
  status         OrderStatus @default(DRAFT)
  type           OrderType   @default(GLASSES)
  orderTypes     String[]    @default([]) @map("order_types")

  // Customer-facing amounts
  totalCustomer   Float @default(0)
  depositCustomer Float @default(0)
  balanceCustomer Float @default(0)

  // Real/internal amounts (for reporting)
  totalReal   Float @default(0)
  depositReal Float @default(0)
  balanceReal Float @default(0)

  isDualInvoice Boolean @default(false)

  insurancePolicyId String?

  // Frame details (denormalized at time of sale)
  frameBrand     String?
  frameModel     String?
  frameColor     String?
  frameSku       String?
  frameWholesale Float?

  // Lens details
  lensType    String?
  lensCoating String?
  lensSku     String?

  // Enhanced frame fields
  frameEyeSize    String?  @map("frame_eye_size")
  frameBridge     String?  @map("frame_bridge")
  frameTemple     String?  @map("frame_temple")
  frameColourCode String?  @map("frame_colour_code")

  // Lens configuration
  lensDesign    String?  @map("lens_design")
  lensAddOns    String[] @default([]) @map("lens_add_ons")
  orderCategory String?  @map("order_category")

  // Payment/deduction fields
  insuranceCoverage Float? @map("insurance_coverage")
  referralCredit    Float? @map("referral_credit")
  referralId        String?   @map("referral_id")
  referral          Referral? @relation(fields: [referralId], references: [id])

  // Eye exam fields
  examType               String?  @map("exam_type")
  examPaymentMethod      String?  @map("exam_payment_method")
  insuranceCoveredAmount Float?   @map("insurance_covered_amount")

  // Post-pickup marketing
  reviewRequestSent        Boolean   @default(false) @map("review_request_sent")
  referralCampaignEnrolled Boolean   @default(false) @map("referral_campaign_enrolled")
  familyPromoCampaignEnrolled Boolean @default(false) @map("family_promo_campaign_enrolled")
  pickupNotes              String?   @map("pickup_notes")

  verifiedAt DateTime? @map("verified_at")

  notes         String? // internal notes
  labNotes      String? // notes sent to lab
  labOrderedAt  DateTime?
  labReceivedAt DateTime?
  readyAt       DateTime?
  pickedUpAt    DateTime?
  dueDate       DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer        Customer         @relation(fields: [customerId], references: [id])
  user            User             @relation(fields: [userId], references: [id])
  prescription    Prescription?    @relation(fields: [prescriptionId], references: [id])
  insurancePolicy InsurancePolicy? @relation(fields: [insurancePolicyId], references: [id])

  lineItems     OrderLineItem[]
  statusHistory OrderStatusHistory[]
  payments      Payment[]
  invoices      Invoice[]

  @@index([customerId])
  @@index([status])
  @@index([orderNumber])
  @@map("orders")
}

enum OrderStatus {
  DRAFT
  CONFIRMED
  LAB_ORDERED
  LAB_RECEIVED
  VERIFIED
  READY
  PICKED_UP
  CANCELLED
}

enum OrderType {
  GLASSES
  CONTACTS
  SUNGLASSES
  ACCESSORIES
  EXAM_ONLY
}

model OrderLineItem {
  id                String       @id @default(cuid())
  orderId           String
  inventoryItemId   String?
  type              LineItemType
  description       String
  quantity          Int          @default(1)
  unitPriceCustomer Float
  unitPriceReal     Float
  totalCustomer     Float
  totalReal         Float
  notes             String?
  createdAt         DateTime     @default(now())

  order         Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  inventoryItem InventoryItem? @relation(fields: [inventoryItemId], references: [id])

  @@map("order_line_items")
}

enum LineItemType {
  FRAME
  LENS
  COATING
  CONTACT_LENS
  EXAM
  ACCESSORY
  DISCOUNT
  OTHER
}

model OrderStatusHistory {
  id        String      @id @default(cuid())
  orderId   String
  status    OrderStatus
  note      String?
  createdAt DateTime    @default(now())
  createdBy String? // user name or id

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_status_history")
}

// ─────────────────────────────────────────
// PAYMENTS & INVOICES
// ─────────────────────────────────────────

model Payment {
  id        String        @id @default(cuid())
  orderId   String
  amount    Float
  method    PaymentMethod
  reference String? // cheque number, last 4 digits, etc.
  note      String?
  paidAt    DateTime      @default(now())
  createdAt DateTime      @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("payments")
}

enum PaymentMethod {
  CASH
  DEBIT
  CREDIT_VISA
  CREDIT_MASTERCARD
  CREDIT_AMEX
  CHEQUE
  E_TRANSFER
  INSURANCE
  OTHER
}

model Invoice {
  id          String      @id @default(cuid())
  orderId     String
  type        InvoiceType
  fileUrl     String? // Supabase Storage URL
  generatedAt DateTime    @default(now())
  createdAt   DateTime    @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("invoices")
}

enum InvoiceType {
  CUSTOMER // what customer sees
  INTERNAL // real amounts
}

// ─────────────────────────────────────────
// INSURANCE
// ─────────────────────────────────────────

model InsurancePolicy {
  id           String       @id @default(cuid())
  customerId   String
  providerName String // e.g. "Sunlife", "OHIP", "Green Shield"
  policyNumber String?
  groupNumber  String?
  memberId     String?
  coverageType CoverageType
  renewalMonth Int? // 1-12
  renewalYear  Int?
  maxFrames    Float?
  maxLenses    Float?
  maxContacts  Float?
  maxExam      Float?
  lastClaimDate             DateTime? @map("last_claim_date")
  eligibilityIntervalMonths Int       @default(24) @map("eligibility_interval_months")
  contractNumber String?   @map("contract_number")
  estimatedCoverage Float? @map("estimated_coverage")
  notes        String?
  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  orders   Order[]
  exams    Exam[]

  @@map("insurance_policies")
}

enum CoverageType {
  VISION
  OHIP
  EXTENDED_HEALTH
  COMBINED
}

// ─────────────────────────────────────────
// EXAMS (V2)
// ─────────────────────────────────────────

model Exam {
  id                String   @id @default(cuid())
  customerId        String
  insurancePolicyId String?
  doctorName        String?
  examDate          DateTime
  examType          ExamType @default(COMPREHENSIVE)

  // Billing
  billingCode  String?
  amountBilled Float?
  amountPaid   Float?
  ohipCovered  Boolean @default(false)

  // Clinical notes
  iop           String? // intraocular pressure
  va            String? // visual acuity
  clinicalNotes String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  customer        Customer         @relation(fields: [customerId], references: [id])
  insurancePolicy InsurancePolicy? @relation(fields: [insurancePolicyId], references: [id])
  prescriptions   Prescription[]

  @@map("exams")
}

enum ExamType {
  COMPREHENSIVE
  CONTACT_LENS
  FOLLOW_UP
  PEDIATRIC
}

// ─────────────────────────────────────────
// WALK-INS (V2)
// ─────────────────────────────────────────

model Walkin {
  id             String        @id @default(cuid())
  customerId     String? // may be null if new/unidentified visitor
  visitedAt      DateTime      @default(now())
  source         String? // "walk-in", "referral", "google", etc.
  interest       String? // what they were looking for
  outcome        WalkinOutcome @default(BROWSED)
  notes          String?
  followUpSentAt DateTime?
  createdAt      DateTime      @default(now())

  customer Customer? @relation(fields: [customerId], references: [id])

  @@map("walkins")
}

enum WalkinOutcome {
  BROWSED
  QUOTE_GIVEN
  ORDER_PLACED
  EXAM_BOOKED
  RETURNED_LATER
  NO_INTEREST
}

// ─────────────────────────────────────────
// MARKETING (V2.1)
// ─────────────────────────────────────────

model Campaign {
  id          String         @id @default(cuid())
  name        String
  type        CampaignType
  status      CampaignStatus @default(DRAFT)
  description String?
  config      Json           @default("{}") // drip steps, timing, etc.

  segmentConfig  Json?     @map("segment_config")
  scheduleConfig Json?     @map("schedule_config")
  templateId     String?   @map("template_id")
  lastRunAt      DateTime? @map("last_run_at")
  nextRunAt      DateTime? @map("next_run_at")

  totalSent      Int   @default(0) @map("total_sent")
  totalDelivered Int   @default(0) @map("total_delivered")
  totalOpened    Int   @default(0) @map("total_opened")
  totalClicked   Int   @default(0) @map("total_clicked")
  totalConverted Int   @default(0) @map("total_converted")
  totalRevenue   Float @default(0) @map("total_revenue")

  createdById String?  @map("created_by_id")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy  User?             @relation("CampaignCreatedBy", fields: [createdById], references: [id])
  template   MessageTemplate?  @relation(fields: [templateId], references: [id])
  recipients CampaignRecipient[]
  messages   Message[]
  runs       CampaignRun[]

  @@map("campaigns")
}

enum CampaignType {
  WALKIN_FOLLOWUP // 14-day drip
  EXAM_REMINDER // annual reminder
  INSURANCE_RENEWAL // 2-year cycle
  ONE_TIME_BLAST
  SECOND_PAIR
  PRESCRIPTION_EXPIRY
  ABANDONMENT_RECOVERY
  FAMILY_ADDON
  INSURANCE_MAXIMIZATION
  POST_PURCHASE_REFERRAL
  VIP_INSIDER
  DAMAGE_REPLACEMENT
  STYLE_EVOLUTION
  BIRTHDAY_ANNIVERSARY
  DORMANT_REACTIVATION
  COMPETITOR_SWITCHER
  LIFESTYLE_MARKETING
  AGING_INVENTORY
  NEW_ARRIVAL_VIP
  EDUCATIONAL_NURTURE
  LENS_EDUCATION
}

enum CampaignStatus {
  DRAFT
  ACTIVE
  PAUSED
  COMPLETED
  ARCHIVED
}

model CampaignRecipient {
  id          String          @id @default(cuid())
  campaignId  String
  customerId  String
  status      RecipientStatus @default(ACTIVE)
  enrolledAt  DateTime        @default(now())
  completedAt DateTime?
  optedOutAt  DateTime?

  currentStep     Int       @default(0) @map("current_step")
  lastMessageAt   DateTime? @map("last_message_at")
  convertedAt     DateTime? @map("converted_at")
  conversionValue Float?    @map("conversion_value")

  campaign Campaign @relation(fields: [campaignId], references: [id])
  customer Customer @relation(fields: [customerId], references: [id])

  @@unique([campaignId, customerId])
  @@map("campaign_recipients")
}

enum RecipientStatus {
  ACTIVE
  COMPLETED
  OPTED_OUT
  CONVERTED
  BOUNCED
}

model Message {
  id           String         @id @default(cuid())
  campaignId   String?
  customerId   String
  channel      MessageChannel
  status       MessageStatus  @default(PENDING)
  subject      String? // email subject
  body         String
  sentAt       DateTime?
  deliveredAt  DateTime?
  failedAt     DateTime?
  errorMessage String?
  externalId   String? // Twilio/SendGrid message ID

  openedAt    DateTime? @map("opened_at")
  clickedAt   DateTime? @map("clicked_at")
  convertedAt DateTime? @map("converted_at")
  stepIndex   Int?      @map("step_index")
  runId       String?   @map("run_id")

  createdAt DateTime @default(now())

  campaign Campaign? @relation(fields: [campaignId], references: [id])
  customer Customer  @relation(fields: [customerId], references: [id])
  run      CampaignRun? @relation(fields: [runId], references: [id])

  @@map("messages")
}

enum MessageChannel {
  SMS
  EMAIL
}

enum MessageStatus {
  PENDING
  SENT
  DELIVERED
  FAILED
  BOUNCED
}

model MessageTemplate {
  id           String          @id @default(cuid())
  name         String
  channel      MessageChannel
  campaignType CampaignType?   @map("campaign_type")
  subject      String?
  body         String
  isDefault    Boolean         @default(false) @map("is_default")
  isActive     Boolean         @default(true) @map("is_active")
  createdAt    DateTime        @default(now()) @map("created_at")
  updatedAt    DateTime        @updatedAt @map("updated_at")

  campaigns Campaign[]

  @@map("message_templates")
}

model CampaignRun {
  id               String    @id @default(cuid())
  campaignId       String    @map("campaign_id")
  runAt            DateTime  @default(now()) @map("run_at")
  recipientsFound  Int       @default(0) @map("recipients_found")
  messagesQueued   Int       @default(0) @map("messages_queued")
  messagesSent     Int       @default(0) @map("messages_sent")
  messagesFailed   Int       @default(0) @map("messages_failed")
  durationMs       Int?      @map("duration_ms")
  error            String?

  campaign Campaign  @relation(fields: [campaignId], references: [id])
  messages Message[]

  @@index([campaignId])
  @@map("campaign_runs")
}

// ─────────────────────────────────────────
// REFERRALS (V3)
// ─────────────────────────────────────────

model Referral {
  id           String    @id @default(cuid())
  referrerId   String // customer who referred
  referredId   String? // customer who was referred (set when redeemed)
  code         String?   @unique
  status       String    @default("PENDING") // PENDING, QUALIFIED, REWARDED
  orderId      String?   @map("order_id") // order that triggered the reward
  rewardAmount Float?
  rewardPaidAt DateTime?
  notes        String?
  createdAt    DateTime  @default(now())

  referrer Customer  @relation("referrer", fields: [referrerId], references: [id])
  referred Customer? @relation("referred", fields: [referredId], references: [id])
  orders   Order[]

  @@map("referrals")
}

// ─────────────────────────────────────────
// APPOINTMENTS (V4 - PMS Replacement)
// ─────────────────────────────────────────

model Appointment {
  id             String            @id @default(cuid())
  customerId     String
  type           AppointmentType   @default(EYE_EXAM)
  status         AppointmentStatus @default(SCHEDULED)
  scheduledAt    DateTime
  duration       Int               @default(30) // minutes
  doctorName     String?
  notes          String?
  reminderSentAt DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  customer Customer @relation(fields: [customerId], references: [id])

  @@map("appointments")
}

enum AppointmentType {
  EYE_EXAM
  CONTACT_LENS_FITTING
  FOLLOW_UP
  GLASSES_PICKUP
  ADJUSTMENT
  STYLING
}

enum AppointmentStatus {
  SCHEDULED
  CONFIRMED
  CHECKED_IN
  COMPLETED
  CANCELLED
  NO_SHOW
}

// ─────────────────────────────────────────
// AUDIT & SETTINGS
// ─────────────────────────────────────────

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String // "CREATE", "UPDATE", "DELETE"
  model     String // "Customer", "Order", etc.
  recordId  String
  changes   Json? // before/after diff
  ipAddress String?
  createdAt DateTime @default(now())

  user User? @relation(fields: [userId], references: [id])

  @@index([model, recordId])
  @@index([userId])
  @@map("audit_logs")
}

model SystemSetting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

// ─────────────────────────────────────────
// FORMS
// ─────────────────────────────────────────

model FormTemplate {
  id          String           @id @default(cuid())
  name        String
  type        FormTemplateType
  description String?
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  submissions FormSubmission[]

  @@map("form_templates")
}

enum FormTemplateType {
  NEW_PATIENT
  HIPAA_CONSENT
  FRAME_REPAIR_WAIVER
  INSURANCE_VERIFICATION
}

model FormSubmission {
  id            String     @id @default(cuid())
  token         String     @unique @default(cuid())
  templateId    String
  customerId    String?
  customerName  String?
  sentByUserId  String
  status        FormStatus @default(PENDING)
  data          Json?
  signatureText String?
  signedAt      DateTime?
  completedAt   DateTime?
  expiresAt     DateTime?
  packageId     String?
  packageOrder  Int?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  template FormTemplate @relation(fields: [templateId], references: [id])
  customer Customer?    @relation(fields: [customerId], references: [id])
  sentBy   User         @relation(fields: [sentByUserId], references: [id])
  package  FormPackage? @relation(fields: [packageId], references: [id])

  @@index([status])
  @@index([customerId])
  @@index([packageId])
  @@map("form_submissions")
}

enum FormStatus {
  PENDING
  COMPLETED
  EXPIRED
}

model FormPackage {
  id            String        @id @default(cuid())
  token         String        @unique @default(cuid())
  customerId    String?
  customerName  String?
  customerEmail String?
  sentByUserId  String
  status        PackageStatus @default(PENDING)
  completedAt   DateTime?
  appliedAt     DateTime?
  expiresAt     DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  customer    Customer?       @relation(fields: [customerId], references: [id])
  sentBy      User            @relation(fields: [sentByUserId], references: [id])
  submissions FormSubmission[]

  @@index([customerId])
  @@index([status])
  @@map("form_packages")
}

enum PackageStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

// ─────────────────────────────────────────
// MEDICAL HISTORY
// ─────────────────────────────────────────

model MedicalHistory {
  id                 String   @id @default(cuid())
  customerId         String   @unique @map("customer_id")
  eyeConditions      String[] @default([]) @map("eye_conditions")
  systemicConditions String[] @default([]) @map("systemic_conditions")
  medications        String?
  allergies          String?
  familyGlaucoma     Boolean  @default(false) @map("family_glaucoma")
  familyAmd          Boolean  @default(false) @map("family_amd")
  familyHighMyopia   Boolean  @default(false) @map("family_high_myopia")
  familyColorblind   Boolean  @default(false) @map("family_colorblind")
  hadLasik           Boolean  @default(false) @map("had_lasik")
  wearsContacts      Boolean  @default(false) @map("wears_contacts")
  contactType        String?  @map("contact_type")
  primaryUse         String?  @map("primary_use")
  screenTimeDaily    Float?   @map("screen_time_daily")
  notes              String?
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("medical_histories")
}

// ─────────────────────────────────────────
// STORE CREDITS
// ─────────────────────────────────────────

model StoreCredit {
  id          String    @id @default(cuid())
  customerId  String    @map("customer_id")
  type        String    // REFERRAL, INSURANCE, PROMOTION, REFUND
  amount      Float
  usedAmount  Float     @default(0) @map("used_amount")
  description String?
  expiresAt   DateTime? @map("expires_at")
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
  @@map("store_credits")
}

// ─────────────────────────────────────────
// SAVED FRAMES
// ─────────────────────────────────────────

model SavedFrame {
  id                  String    @id @default(cuid())
  customerId          String    @map("customer_id")
  inventoryItemId     String?   @map("inventory_item_id")
  brand               String
  model               String?
  color               String?
  sku                 String?
  photoUrl            String?   @map("photo_url")
  notes               String?
  savedBy             String?   @map("saved_by")
  isFavorite          Boolean   @default(false) @map("is_favorite")
  expectedReturnDate  DateTime? @map("expected_return_date")
  createdAt           DateTime  @default(now()) @map("created_at")

  customer      Customer       @relation(fields: [customerId], references: [id], onDelete: Cascade)
  inventoryItem InventoryItem? @relation(fields: [inventoryItemId], references: [id])

  @@index([customerId])
  @@map("saved_frames")
}

// ─────────────────────────────────────────
// NOTIFICATIONS
// ─────────────────────────────────────────

enum NotificationType {
  FORM_COMPLETED
  INTAKE_COMPLETED
  ORDER_READY
  ORDER_CANCELLED
  ORDER_LAB_RECEIVED
  PO_RECEIVED
  LOW_STOCK
  CAMPAIGN_COMPLETED
  CAMPAIGN_ERROR
}

model Notification {
  id        String           @id @default(cuid())
  type      NotificationType
  title     String
  body      String
  href      String?
  actorId   String?          @map("actor_id")
  refId     String?          @map("ref_id")
  refType   String?          @map("ref_type")
  createdAt DateTime         @default(now()) @map("created_at")

  actor User?              @relation("NotificationActor", fields: [actorId], references: [id])
  reads NotificationRead[]

  @@index([createdAt])
  @@map("notifications")
}

model NotificationRead {
  id             String   @id @default(cuid())
  notificationId String   @map("notification_id")
  userId         String   @map("user_id")
  readAt         DateTime @default(now()) @map("read_at")

  notification Notification @relation(fields: [notificationId], references: [id], onDelete: Cascade)
  user         User         @relation("NotificationReads", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([notificationId, userId])
  @@index([userId])
  @@map("notification_reads")
}

model NotificationPreference {
  id      String           @id @default(cuid())
  userId  String           @map("user_id")
  type    NotificationType
  enabled Boolean          @default(true)

  user User @relation("NotificationPreferences", fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@map("notification_preferences")
}

// ─────────────────────────────────────────
// BREACH REPORTS (PHIPA compliance)
// ─────────────────────────────────────────

enum BreachReportStatus {
  OPEN
  INVESTIGATING
  IPC_NOTIFIED
  INDIVIDUALS_NOTIFIED
  RESOLVED
}

model BreachReport {
  id                    String             @id @default(cuid())
  discoveredAt          DateTime           @map("discovered_at")
  reportedBy            String             @map("reported_by")
  description           String
  affectedCount         Int                @map("affected_count")
  dataTypes             String[]           @map("data_types")
  containmentActions    String             @map("containment_actions")
  status                BreachReportStatus @default(OPEN)
  ipcNotifiedAt         DateTime?          @map("ipc_notified_at")
  individualsNotifiedAt DateTime?          @map("individuals_notified_at")
  resolution            String?
  createdAt             DateTime           @default(now()) @map("created_at")
  updatedAt             DateTime           @updatedAt @map("updated_at")

  @@map("breach_reports")
}
